		"seed": "bun src/infra/database/drizzle/seeds/seed.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@types/bun": "latest",
		"drizzle-kit": "^0.20.14"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@paralleldrive/cuid2": "^2.2.2",
		"drizzle-orm": "^0.30.8",
		"elysia": "^1.0.13",
		"pino": "^8.20.0",
		"pino-pretty": "^11.0.0",
		"postgres": "^3.4.4",
		"zod": "^3.22.4"
	}
