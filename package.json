{
	"name": "pizza-shop",
	"module": "main.ts",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/infra/http/server.ts",
		"build": "bun build src/infra/http/server.ts",
		"start": "bun src/infra/http/server.ts",
		"test": "bun test",
		"format": "bunx @biomejs/biome format --write ./src",
		"generate": "drizzle-kit generate:pg",
